{
  "name": "byoa-ai-chat",
  "version": "1.0.0",
  "description": "自分のFigmaプラグイン",
  "main": "build/main.js",
  "scripts": {
    "build": "build-figma-plugin --typecheck --minify",
    "watch": "build-figma-plugin --typecheck --watch",
    "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules .",
    "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix .",
    "server:dev": "tsx watch --clear-screen=false server/index.ts",
    "server:build": "tsc -p tsconfig.server.json",
    "server:start": "node dist/server/index.js",
    "test": "jest --config jest.config.cjs"
  },
  "author": "",
  "license": "",
  "figma-plugin": {
    "id": "1563837687656471019",
    "name": "Codex Design Chat",
    "api": "1.0.0",
    "editorType": ["figma"],
    "documentAccess": "dynamic-page",
    "enableProposedApi": false,
    "capabilities": [],
    "networkAccess": {
      "allowedDomains": ["*"],
      "reasoning": "ローカルのCodex Honoサーバーと通信するため"
    },
    "main": "main.ts",
    "ui": "ui.tsx"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.37",
    "@create-figma-plugin/ui": "^2.6.1",
    "@create-figma-plugin/utilities": "^2.6.1",
    "@hono/node-server": "^1.7.2",
    "dotenv": "^17.2.3",
    "hono": "^4.2.9",
    "preact": "^10.20.1"
  },
  "devDependencies": {
    "@create-figma-plugin/build": "^2.6.1",
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "^1.119.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@figma/figma-plugins/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": ["./tsconfig.json", "./tsconfig.server.json"],
      "tsconfigRootDir": "./src"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  }
}
